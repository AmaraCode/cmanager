@model IEnumerable<Company>

@{
    ViewData["Title"] = "List";
}

<h1>All Companies</h1>
<a class="btn btn-warning btn-sm" asp-action="create">Create New Company</a>

<table class="table table-striped table-hover table-sm">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Company</th>
            <th scope="col">City</th>
            <th scope="col">Phone</th>
            <th scope="col">Website</th>
            <th scope="col"></th>
        </tr>
    </thead>

    @foreach(Company company in @Model)
    {
        <tr>
            <td nowrap>@company.CompanyName</td>
            <td><a tabindex="0" data-toggle="popover" title="Address" data-content="@company.Address, @company.City, @company.State, @company.Zip">@company.City</a></td>
            <td nowrap><a href="skype:@company.Phone?call">@company.Phone</a></td>
            <td><a href="http://@company.Website" target="_blank">@company.Website</a></td>
            <td nowrap>
                <a class="btn btn-primary btn-sm" asp-route-id="@company.ID" asp-controller="conversation" asp-action="company">Conversations</a>
                <a class="btn btn-primary btn-sm" asp-route-id="@company.ID" asp-action="edit">Edit</a>
                <a class="btn btn-danger btn-sm" asp-route-id="@company.ID" asp-action="delete">Remove</a>
            </td>
        </tr>
    }
</table>