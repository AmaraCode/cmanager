@model IEnumerable<Company>

@{
    ViewData["Title"] = "List";
}

<h1>Companies</h1>
<a class="btn btn-warning btn-sm" asp-action="create">Create New Company</a>

<table class="table table-striped table-hover table-sm">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Company</th>
            <th scope="col">City</th>
            <th scope="col">Phone</th>
            <th scope="col">Website</th>
            <th scope="col"></th>
        </tr>
    </thead>

    @foreach (Company company in @Model)
    {
        <tr>
            <td nowrap>@company.CompanyName</td>
            <td><a tabindex="0" data-toggle="popover" title="Address" data-content="@company.Address, @company.City, @company.State, @company.Zip">@company.City</a></td>
            <td nowrap><a href="skype:@company.Phone?call">@company.Phone</a></td>
            <td><a href="http://@company.Website" target="_blank">@company.Website</a></td>
            <td nowrap>
                <a title="Add Conversation" class="btn btn-primary btn-sm" asp-route-ReturnUrl="@ViewContext.HttpContext.Request.PathAndQuery()" asp-route-companyID="@company.ID" asp-controller="conversation" asp-action="createforcompany" ><i class="far fa-plus-square"></i></a>
                <a title="Show Conversations" class="btn btn-primary btn-sm" asp-route-id="@company.ID" asp-controller="conversation" asp-action="company"><i class="fas fa-list-alt"></i></a>
                <a title="Edit Company" class="btn btn-primary btn-sm" asp-route-id="@company.ID" asp-action="edit"><i class="fas fa-tools"></i></a>
                <a title="Remove Company" class="btn btn-danger btn-sm" asp-route-id="@company.ID" asp-action="delete"><i class="fas fa-trash-alt"></i></a>
            </td>
        </tr>
    }
</table>