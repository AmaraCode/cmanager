@model CompanyIndexViewModel



There are @Model.CompanyCount companies.
@if (Model.CompanyCount > 0)
{<a asp-action="list">View List</a>}

<br />

There are @Model.ConversationCount conversations.
@if (Model.ConversationCount > 0)
{<a asp-controller="conversation" asp-action="list">View List</a>}

<br />
<br />
Last 15 Conversations
<table class="table table-striped table-hover table-sm">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Company</th>
            <th scope="col">Person</th>
            <th scope="col">Phone</th>
            <th scope="col">Email</th>
            <th scope="col">Discussion</th>
        </tr>
    </thead>

    @foreach (ConversationCompanyViewModel conv in @Model.LatestConversations)
    {
<tr>
    <td nowrap><a tabindex="0" data-toggle="popover" title="Address" data-content="@conv.Company.Address, @conv.Company.City, @{<br />} @conv.Company.State, @conv.Company.Zip">@conv.Company.CompanyName</a></td>
    <td nowrap>@conv.Conversation.Name</td>
    <td nowrap>@conv.Conversation.Phone</td>
    <td nowrap>@conv.Conversation.Email</td>
    <td>@conv.Conversation.Discussion</td>
</tr>
    }
</table>